{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container center">

        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_row(registrationForm.username) }}
            <span class="error">{{ form_errors(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}</span>
        </div>
        <div class="input-field col s12 m6 l6 offset-m3 offset-l3">
            {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
            <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
        </div>

            <div class="input-field col s12">
                    <input type="submit" name="" class="btn btn-primary" value="M'inscrire">
            </div>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
